<p id="notice"><%= notice %></p>

<h1>Ideaposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideaposts.each do |ideapost| %>
      <tr>
        <td><%= ideapost.content %></td>
        <td><%= ideapost.user_id %></td>
        <td><%= link_to 'Show', ideapost %></td>
        <td><%= link_to 'Edit', edit_ideapost_path(ideapost) %></td>
        <td><%= link_to 'Destroy', ideapost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ideapost', new_ideapost_path %>
